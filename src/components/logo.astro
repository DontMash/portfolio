---
import { Icon } from 'astro-icon/components';

import Button from '@/components/content/button';

const attributes = {
  title: 'Logomark of soren.codes',
  width: 132,
  height: 48,
};
---

<Button
  class='-mb-4'
  href={`/${Astro.currentLocale}`}
  variants={{ kind: 'link' }}
>
  <Icon
    name=`logomark_light`
    {...attributes}
    x-show='theme === "light"'
    x-cloak
  />
  <Icon
    name=`logomark_dark`
    {...attributes}
    x-show='theme === "dark"'
    x-cloak
  />
  <span class='sr-only'>Go to the frontpage</span>
</Button>
