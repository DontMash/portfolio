---
import { sectionVariant, type SectionProps } from './section.variant';

type Props = SectionProps & {
  id?: string;
};

const props = Astro.props;
---

<section id={props.id} class:list={[sectionVariant.base(props)]}>
  {
    props.max && (
      <div class:list={[sectionVariant.content(props)]}>
        <slot />
      </div>
    )
  }
  {!props.max && <slot />}
</section>
