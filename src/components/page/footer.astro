---
import { Icon } from 'astro-icon/components';

import Button from '@/components/ui/button/button.astro';
import Logo from '@/components/ui/logo.astro';
---

<footer class='prose-invert bg-foreground py-12 text-background'>
  <div
    class='mx-auto grid min-h-60 max-w-screen-xl grid-rows-3 gap-8 px-4 sm:grid-cols-2 sm:grid-rows-1 sm:px-12'
  >
    <div class='flex flex-col items-start gap-6'>
      <Logo theme='dark' />

      <p class='max-w-96 grow text-sm'>
        Software development is the process of transforming imagination into
        reality.
      </p>

      <ul class='flex flex-wrap gap-2'>
        <li>
          <Button
            title='Send me an email'
            href='mailto:work@soren.codes'
            variants={{ intent: 'neutral', size: 'icon' }}
          >
            <Icon name='tabler:mail' size={24} />
            <span class='sr-only'>Mail me</span>
          </Button>
        </li>
        <li>
          <Button
            title='Look at my Ko-fi'
            href='https://ko-fi.com/smaschmann'
            target='_blank'
            rel='noreferrer'
            variants={{ intent: 'neutral', size: 'icon' }}
          >
            <Icon name='simple-icons:kofi' size={24} />
            <span class='sr-only outline'>Ko-fi - soren.codes</span>
          </Button>
        </li>
        <li>
          <Button
            title='Look at my GitHub'
            href='https://github.com/dontmash'
            target='_blank'
            rel='noreferrer'
            variants={{ intent: 'neutral', size: 'icon' }}
          >
            <Icon name='tabler:brand-github' size={24} />
            <span class='sr-only'>GitHub - soren.codes</span>
          </Button>
        </li>
        <li>
          <Button
            href='https://www.linkedin.com/in/smaschmann'
            title='Look at my LinkedIn'
            target='_blank'
            rel='noreferrer'
            variants={{ intent: 'neutral', size: 'icon' }}
          >
            <Icon name='tabler:brand-linkedin' size={24} />
            <span class='sr-only'>LinkedIn - Sören Maschmann</span>
          </Button>
        </li>
      </ul>

      <span class='text-sm'>©{new Date().getUTCFullYear()} soren.codes</span>
    </div>

    <div class='flex flex-col gap-6 sm:text-right'>
      <ul class='flex grow flex-col gap-2'>
        <li>
          <Button
            title='To the contact information'
            href='/contact'
            variants={{ kind: 'link', intent: 'neutral' }}
          >
            Contact
          </Button>
        </li>
        <li>
          <Button
            title='To the imprint'
            href='/imprint'
            variants={{ kind: 'link', intent: 'neutral' }}
          >
            Imprint
          </Button>
        </li>
        <li>
          <Button
            title='To the imprint'
            href='/privacy'
            variants={{ kind: 'link', intent: 'neutral' }}
          >
            Privacy Policy
          </Button>
        </li>
      </ul>

      <span class='text-sm'
        >Made with <Icon
          class='inline align-middle text-primary'
          name='tabler:heart'
          size={16}
        /> by me</span
      >
    </div>

    <div class='flex flex-col items-center sm:col-span-2'>
      <Button
        title='To the top'
        href='#top'
        variants={{ intent: 'neutral', size: 'icon-lg' }}
      >
        <Icon name='tabler:chevron-up' size={32} />
        <span class='sr-only'>Go back to the top</span>
      </Button>
    </div>
  </div>
</footer>
