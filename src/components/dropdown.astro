---
import { button } from '@/components/content/button';
import Icon from '@/components/content/icon.astro';

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div
  class='relative'
  x-data='collapsible'
  x-id={`["dropdown-${id}"]`}
  @keydown.escape.prevent.stop='close($refs.button)'
  @focusin.window='!$refs.panel.contains($event.target) && close()'
>
  <button
    class:list={[button({ kind: 'link', intent: 'primary' })]}
    type='button'
    x-ref='button'
    x-bind:aria-expanded='state'
    x-bind:aria-controls={`$id("dropdown-${id}")`}
    @click='toggle'
  >
    <slot name='button' />
    <Icon
      name='tabler:caret-down'
      class='transition data-[open]:rotate-180'
      x-bind:data-open='state'
    />
  </button>

  <div
    class='absolute left-0 mt-2 w-full border-3 bg-(--color-background)'
    x-ref='panel'
    x-show='state'
    x-bind:id={`$id("dropdown-${id}")`}
    x-transition
    x-cloak
    @click.outside='close($refs.button)'
  >
    <slot />
  </div>
</div>
