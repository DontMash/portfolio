---
import { Icon } from 'astro-icon/components';

import Button from '@/components/button/button.astro';
import { button } from '@/components/button/button';
import Logo from '@/components/logo.astro';
---

<header class='sticky top-0 left-0 border-b-0.75 bg-background z-50'>
  <div class='flex items-center h-20 max-w-screen-xl px-4 sm:px-12 mx-auto'>
    <Logo />

    <Button
      class:list={[button(), 'hidden', 'sm:inline-flex', 'ml-auto']}
      title='To the contact information'
      href='/contact'
    >
      <Icon name='tabler:at' size={24} />
      <span>Say hello</span>
    </Button>
  </div>
</header>
